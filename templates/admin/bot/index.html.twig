{% extends 'base.html.twig' %}

{% block title %}Bot index{% endblock %}

{% block body %}
    <h1>Bot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bot in bots %}
            <tr>
                <td>{{ bot.id }}</td>
                <td>{{ bot.name }}</td>
                <td>
                    <a href="{{ path('bot_show', {'id': bot.id}) }}">show</a>
                    <a href="{{ path('bot_edit', {'id': bot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bot_new') }}">Create new</a>
{% endblock %}
