{% extends 'base.html.twig' %}

{% block title %}Accueil - PokéDev{% endblock %}

{% block body %}

<div id="indexMainBody">
    <h1 class="titleH1">PokéDev</h1>

    {% if app.user and equipeId is null %}
        <div> <a href="{{ path('app_new_game', { 'id': app.user.id }) }}"> Nouvelle partie </a> </div>
    {% elseif app.user %}
        <div> <a href="{{ path('app_game') }}"> Jouer </a> </div>
    {% else %}    
        <div> <a href="{{ path('app_login') }}"> Se connecter pour jouer </a> </div>
    {% endif %}
    
</div>

{% endblock %}

